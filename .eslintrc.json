{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never"
            }
        ],
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "class-methods-use-this":"off",
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
    }
}
